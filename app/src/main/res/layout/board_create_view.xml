<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/boardCreateView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_delete_24"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/boardCreateView"
        app:layout_constraintEnd_toEndOf="@+id/boardCreateView"
        app:layout_constraintStart_toStartOf="@+id/boardCreateView"
        app:layout_constraintTop_toTopOf="@+id/boardCreateView" />


</androidx.constraintlayout.widget.ConstraintLayout>