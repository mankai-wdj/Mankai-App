<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/group_back">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/GroupimageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a"/>

        <TextView
            android:id="@+id/Groupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Name"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/Grouponeline"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Hello this is Test Group Info hello how are you Good? or Bad? "
            android:textSize="10dp"
            android:layout_marginLeft="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Groupcategory"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:layout_marginLeft="3dp"
                android:drawableLeft="@drawable/grouplist_icon1"
                android:text="Categore"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/Grouppeople"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:layout_marginLeft="3dp"
                android:drawableLeft="@drawable/grouplist_icon1"
                android:text="People"
                android:textSize="10dp"/>
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>