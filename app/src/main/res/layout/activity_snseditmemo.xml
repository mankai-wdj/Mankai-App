<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/sns_edit_memo"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모제목"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sns_edit_memo_title"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모내용"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:id="@+id/sns_edit_memo_text"/>

    <Button
        android:id="@+id/pick_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 고르기"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_gallery_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:textColor="@color/white"
            android:id="@+id/sns_edit_memo_edit_btn"
            android:layout_gravity="left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:layout_height="wrap_content"
            android:text="수정하기" />



        <Button
            android:layout_marginLeft="6dp"
            android:id="@+id/sns_edit_memo_delete_btn"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="삭제하기" />

    </LinearLayout>


</LinearLayout>